<?xml version="1.0" encoding="UTF-8"?>
<application id="s5_mcd_seq">

    <jobTemplates>
        <!-- prepare job template  -->
        <jobTemplate id="prepare">
             <streamingExecutable>/application/s5_mcd_seq/prepare.sh</streamingExecutable>
             <defaultJobconf>
                 <property id="ciop.job.max.tasks">1</property>
             </defaultJobconf>
        </jobTemplate>
        <!-- process job template  -->
        <jobTemplate id="process">
            <streamingExecutable>/application/s5_mcd_seq/process.sh</streamingExecutable>
            <defaultParameters>
                <parameter id="subsampling" title="Subsampling" abstract="Use the subsampled image for processing (default: 1, i.e. no subsampling)." scope="runtime">1</parameter>
            </defaultParameters>
            <defaultJobconf>
                <property id="ciop.job.max.tasks">1</property>
            </defaultJobconf>
         </jobTemplate>
    </jobTemplates>

    <workflow id="s5_mcd_seq" title="S5 MCD Sequential" abstract="SenSyF demo with a single process">
        <workflowVersion>1.0</workflowVersion>
        <!-- node prepare -->
        <node id="prepare">
            <job id="prepare" />
            <sources>
                <source refid="file:urls">/application/datasets/images_dt1.txt</source>
            </sources>
            <parameters/>
        </node>
        <!-- node process -->
        <node id="process">
            <job id="process"/>
            <sources>
                <source refid="wf:node">prepare</source>
            </sources>
            <parameters/>
        </node>
    </workflow>

</application>

