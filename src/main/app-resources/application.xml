<?xml version="1.0" encoding="UTF-8"?>
<application id="s5_mcd_seq">

	<jobTemplates>
		<!-- s5_mcd_seq job template  -->
		<jobTemplate id="s5_mcd_seq">
			<streamingExecutable>/application/s5_mcd_seq/run.sh</streamingExecutable>
			<defaultParameters>
				<parameter id="clus_fname" abstract="Name of file containing detected clusters" scope="runtime" type="opensearch" target="name:clusters">clusters.tif</parameter>
				<parameter id="pred_fname" abstract="Name of file containing predicitions" scope="runtime" type="opensearch" target="name:predictions">predictions.tif</parameter>
			</defaultParameters>
			<defaultJobconf>
		        	<property id="ciop.job.max.tasks">1</property>
			</defaultJobconf>
		</jobTemplate>

	</jobTemplates>

  	<workflow id="s5_mcd_seq" title="S5 MCD Sequential" abstract="SenSyF demo with a single process">
		<workflowVersion>1.0</workflowVersion>
		<!-- node s5_mcd_seq -->
		<node id="s5_mcd_seq">
			<job id="s5_mcd_seq"></job>
			<sources>
				<source refid="file:urls">/application/datasets/images-spot4.txt</source>
			</sources>
		</node>
	</workflow>

</application>

